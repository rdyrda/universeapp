<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="orb_form">
        <%= render 'shared/orb_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Cosmic Atlas</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Universe App</h1>
    <h2>
        Strona domowa prostej aplikacji opartej o technologiÄ™ Ruby on Rails.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <div class="logo">
    <%= image_tag "universe.jpg", :alt => "Rails logo" %>
  </div>
<% end %>